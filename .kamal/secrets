SECRETS=$(kamal secrets fetch --adapter doppler --from forecastly/prd KAMAL_REGISTRY_PASSWORD GOOGLE_PLACES_API_KEY OPENWEATHER_API_KEY GEOCODER_KEY)
KAMAL_REGISTRY_PASSWORD=$(kamal secrets extract KAMAL_REGISTRY_PASSWORD ${SECRETS})
GOOGLE_PLACES_API_KEY=$(kamal secrets extract GOOGLE_PLACES_API_KEY ${SECRETS})
OPENWEATHER_API_KEY=$(kamal secrets extract OPENWEATHER_API_KEY ${SECRETS})
GEOCODER_KEY=$(kamal secrets extract GEOCODER_KEY ${SECRETS})

# Improve security by using a password manager. Never check config/master.key into git!
RAILS_MASTER_KEY=$(cat config/master.key)
