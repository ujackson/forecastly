<div class="rounded-3xl bg-white/10 backdrop-blur-md border border-white/20 p-8 text-white">
  <div class="flex items-center justify-between mb-6">
    <div class="flex items-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-5 w-5 text-blue-200">
        <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
        <circle cx="12" cy="10" r="3"/>
      </svg>
      <span class="text-lg font-medium" id="currentLocation"><%= location %></span>
    </div>
    <div class="flex items-center gap-2 text-blue-200">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
        <path d="M8 2v4"/>
        <path d="M16 2v4"/>
        <rect width="18" height="18" x="3" y="4" rx="2"/>
        <path d="M3 10h18"/>
      </svg>
      <span class="text-sm" id="currentDate"><%= Time.zone.at(@forecast[:dt]).strftime("%A, %B %d") %></span>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Main Temperature -->
    <div class="text-center lg:text-left">
      <div class="flex items-center justify-center lg:justify-start gap-4 mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-16 w-16 text-blue-200">
          <path d="M17.5 19H9a7 7 0 1 1 6.71-9h1.79a4.5 4.5 0 1 1 0 9Z"/>
        </svg>
        <div>
          <div class="text-6xl font-light" id="mainTemperature"><%= "#{@forecast[:temp].round}°" %></div>
          <div class="text-xl text-blue-200" id="mainCondition"><%= @forecast[:weather].first[:description].titleize %></div>
        </div>
      </div>
      <div class="text-blue-200" id="feelsLike"><%= "Feels like #{@forecast[:feels_like].round}°F" %></div>
      <div class="text-blue-200 mt-2">
        <span class="font-semibold" id="highTemp"><%= "H: #{@forecast[:high].round}°" %></span>
        <span class="mx-2">•</span>
        <span class="font-semibold" id="lowTemp"><%= "L: #{@forecast[:low].round}°" %></span>
      </div>
    </div>

    <!-- Weather Details -->
    <div class="grid grid-cols-2 gap-4">
      <div class="rounded-2xl bg-white/10 p-4 text-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6 text-blue-200 mx-auto mb-2">
          <path d="M7 16.3c2.2 0 4-1.83 4-4.05 0-1.16-.57-2.26-1.71-3.19S7.29 6.75 7 5.3c-.29 1.45-1.14 2.84-2.29 3.76S3 11.1 3 12.25c0 2.22 1.8 4.05 4 4.05z"/>
          <path d="M12.56 6.6A10.97 10.97 0 0 0 14 3.02c.5 2.5 2 4.9 4 6.5s3 3.5 3 5.5a6.98 6.98 0 0 1-11.91 4.97"/>
        </svg>
        <div class="text-2xl font-semibold" id="humidity"><%= "#{@forecast[:humidity]}%" %></div>
        <div class="text-sm text-blue-200">Humidity</div>
      </div>
      <div class="rounded-2xl bg-white/10 p-4 text-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6 text-blue-200 mx-auto mb-2">
          <path d="M9.59 4.59A2 2 0 1 1 11 8H2m10.59 11.41A2 2 0 1 0 14 16H2m15.73-8.27A2.5 2.5 0 1 1 19.5 12H2"/>
        </svg>
        <div class="text-2xl font-semibold" id="windSpeed"><%= @forecast[:wind_speed].round %></div>
        <div class="text-sm text-blue-200">mph</div>
      </div>
      <div class="rounded-2xl bg-white/10 p-4 text-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6 text-blue-200 mx-auto mb-2">
          <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/>
          <circle cx="12" cy="12" r="3"/>
        </svg>
        <div class="text-2xl font-semibold" id="visibility"><%= meters_to_miles(@forecast[:visibility]).round %></div>
        <div class="text-sm text-blue-200">miles</div>
      </div>
      <div class="rounded-2xl bg-white/10 p-4 text-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6 text-blue-200 mx-auto mb-2">
          <path d="M14 4v10.54a4 4 0 1 1-4 0V4a2 2 0 0 1 4 0Z"/>
        </svg>
        <div class="text-2xl font-semibold" id="uvIndex"><%= @forecast[:uvi].round %></div>
        <div class="text-sm text-blue-200">UV Index</div>
      </div>
    </div>
  </div>
</div>