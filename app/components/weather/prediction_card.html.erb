<div class="rounded-3xl bg-white/10 backdrop-blur-md border border-white/20 p-6 text-white">
  <h2 class="text-xl font-semibold mb-4">7-Day Forecast</h2>
  <div class="space-y-3" id="weeklyForecast">
    <% @forecast.first(7).each do |daily| %>
      <div class="flex items-center justify-between p-4 rounded-2xl bg-white/5 hover:bg-white/10 transition-colors">
        <div class="flex items-center gap-4 flex-1">
          <div class="w-16 text-left font-medium"><%= Time.zone.at(daily[:dt]).strftime("%A") %></div>
          <div class="text-blue-200 text-3xl"><%= weather_emoji_for(daily[:weather].first[:icon]) %></div>
          <div class="text-blue-200 flex-1"><%= daily[:weather].first[:description].titleize %></div>
        </div>
        <div class="flex items-center gap-4">
          <span class="text-blue-200"><%= daily.dig(:temp, :min).round %>°</span>
          <div class="w-20 h-2 bg-white/20 rounded-full overflow-hidden">
            <div class="h-full bg-gradient-to-r from-blue-300 to-orange-300 rounded-full" style="width: <%= percentage(daily[:temp][:day], daily[:temp][:min], daily[:temp][:max]) %>%"></div>
          </div>
          <span class="font-semibold w-8 text-right"><%= daily.dig(:temp, :max).round %>°</span>
        </div>
      </div>
    <% end %>
  </div>
</div>